<%= render "/shared/header" %>

<%= form_tag projects_path, method: :get, remote: true, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", class: "flatButton" %>
<% end %>

<ul class="projects">
	<%= render @projects %>
</ul>

<%= paginate @projects %>
<%= render "shared/footer"%>

