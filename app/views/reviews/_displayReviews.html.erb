<% @project.reviews.newest_first.each do |review| %>
	<%= image_tag ("beer.jpg") %>
	<p>
		<%= review.comment %>
		</br>
		<% if review.user != nil %>
			<em> by <%= review.user.name %></em>
			Added on: <%= review.created_at %></br></br>
			
				<% if current_user != nil %>
					<% if review.user_id == current_user.id %>
					<%= link_to "Edit", edit_project_review_path(@project, review)%> | 
					<%= link_to "Delete", project_review_path(@project, review), method: :delete, data: {confirm: "Are you sure you want to delete this review"}  %>
					<% end %>
				<% end %>
			<% end %>
	</p>
<% end %>