<section class="formPage">
<h5>WRITE A NEW COMMENT</h5>

  <%= form_for [@project, @review], remote: true do |f| %>
    <div id="review-form-errors">
    <%= render :partial => "/reviews/reviewFormErrors" %>
   </div>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit class: "flatButton"%>
    </div>
  <% end %>
</section>
